<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>NanoleafGUI_Plugin</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <UseWindowsForms>true</UseWindowsForms>
    <ImportWindowsDesktopTargets>true</ImportWindowsDesktopTargets>
  </PropertyGroup>
  <PropertyGroup>
    <StartupObject />
  </PropertyGroup>
  <PropertyGroup>
    <ApplicationIcon>Nanoleaf.ico</ApplicationIcon>
  </PropertyGroup>
  <PropertyGroup>
    <RuntimeIdentifiers>win</RuntimeIdentifiers>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="LumosControls">
      <HintPath>..\..\Lumos\Lumos\LumosControls\bin\Debug\LumosControls.dll</HintPath>
    </Reference>
    <Reference Include="LumosGUI">
      <HintPath>..\..\Lumos\master\LumosGUI\bin\Debug\LumosGUI.exe</HintPath>
    </Reference>
    <Reference Include="LumosLIB">
      <HintPath>..\..\Lumos\Lumos\LumosLIB\bin\Debug\LumosLIB.dll</HintPath>
    </Reference>
    <Reference Include="LumosToolsLIB">
      <HintPath>..\..\Lumos\Lumos\LumosToolsLIB\bin\Debug\LumosToolsLIB.dll</HintPath>
    </Reference>
    <Reference Include="LumosProtobuf">
      <HintPath>..\..\Lumos\Lumos\LumosProtobuf\bin\Debug\LumosProtobuf.dll</HintPath>
    </Reference>
    <Reference Include="LumosControls">
      <HintPath>..\dep\LumosControls.dll</HintPath>
    </Reference>
    <Reference Include="LumosGUI">
      <HintPath>..\dep\LumosGUI.exe</HintPath>
    </Reference>
    <Reference Include="LumosLIB">
      <HintPath>..\dep\LumosLIB.dll</HintPath>
    </Reference>
    <Reference Include="LumosToolsLIB">
      <HintPath>..\dep\LumosToolsLIB.dll</HintPath>
    </Reference>
    <Reference Include="LumosProtobuf">
      <HintPath>..\dep\LumosProtobuf.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Nanoleaf.ico" />
    <Content Include="Resources\32\Nanoleaf.png" />
    <Content Include="Resources\64\Nanoleaf.png" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
  </ItemGroup>
  <PropertyGroup>
    <PostBuildEvent>FOR /F "skip=2 tokens=2,*" %%A IN ('reg.exe query "HKLM\SOFTWARE\Microsoft\Windows\CurrentVersion\App Paths\Lumos.exe" /v ""') DO set "DMXCRF=%%B"
xcopy "$(TargetDir)NanoleafGUI-Plugin.*" "%DMXCRF%\GUI\Plugins\Nanoleaf\" /C /F /R /Y /I
xcopy "$(TargetDir)Newtonsoft.Json.dll" "%DMXCRF%\GUI\Plugins\Nanoleaf\" /C /F /R /Y /I
xcopy "$(TargetDir)System.ComponentModel.Annotations.dll" "%DMXCRF%\GUI\Plugins\Nanoleaf\" /C /F /R /Y /I

</PostBuildEvent>
    <RunPostBuildEvent>Always</RunPostBuildEvent>
  </PropertyGroup>
</Project>